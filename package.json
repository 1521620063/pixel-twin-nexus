{
  "name": "pixel-twin-nexus",
  "version": "1.0.1",
  "description": "一个基于 NestJS + Vue 3 构建的企业级数字孪生管理平台，提供完整的前后端解决方案。后端提供 RESTful API 和 WebSocket 实时通信，前端支持实时数据可视化、WebRTC 流媒体播放和现代化 UI 交互。支持主从架构部署，可同时管理多个 Pixel Twin 实例",
  "author": "Tadpole",
  "private": false,
  "license": "MIT License",
  "scripts": {
    "install:all": "npm install && cd client/pixel-twin-nexus-web && npm install",
    "start:master": "concurrently \"npm run start:server:master\" \"npm run start:client\"",
    "start:server:master": "cross-env NODE_ENV=master nest start --watch",
    "start:client": "cd client/pixel-twin-nexus-web && npm run dev",
    "start:slave": "cross-env NODE_ENV=slave nest start --watch",
    
    "build:client":"cd client/pixel-twin-nexus-web && npm run build",
    "build": "nest build -p tsconfig.production.json && node scripts/obfuscate.js medium && cd client/pixel-twin-nexus-web && npm run build",
    "build:basic": "nest build -p tsconfig.production.json && node scripts/obfuscate.js basic && cd client/pixel-twin-nexus-web && npm run build",
    "build:medium": "nest build -p tsconfig.production.json && node scripts/obfuscate.js medium && cd client/pixel-twin-nexus-web && npm run build",
    "build:advanced": "nest build -p tsconfig.production.json && node scripts/obfuscate.js advanced && cd client/pixel-twin-nexus-web && npm run build",
    "deploy:github": "node scripts/deploy-github.js",

    "start:prod:master": "cross-env NODE_ENV=master node dist/main",
    "start:prod:slave": "cross-env NODE_ENV=slave node dist/main",

    "pm2:start:master": "pm2 start ecosystem.config.js --only pixel-twin-nexus-master",
    "pm2:start:slave": "pm2 start ecosystem.config.js --only pixel-twin-nexus-slave",
    "pm2:stop:master": "pm2 stop ecosystem.config.js --only pixel-twin-nexus-master",
    "pm2:stop:slave": "pm2 stop ecosystem.config.js --only pixel-twin-nexus-slave",
    "pm2:restart:master": "pm2 restart ecosystem.config.js --only pixel-twin-nexus-master",
    "pm2:restart:slave": "pm2 restart ecosystem.config.js --only pixel-twin-nexus-slave",
    "pm2:delete:master": "pm2 delete ecosystem.config.js --only pixel-twin-nexus-master",
    "pm2:delete:slave": "pm2 delete ecosystem.config.js --only pixel-twin-nexus-slave",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-ws": "^11.1.3",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/websockets": "^11.1.3",
    "@types/uuid": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.0",
    "cookie-parser": "^1.4.7",
    "crypto-js": "^4.2.0",
    "csrf-csrf": "^4.0.3",
    "fs-extra": "^11.3.0",
    "helmet": "^8.1.0",
    "node-jsencrypt": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "tree-kill": "^1.2.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "glob": "^11.0.3",
    "globals": "^16.0.0",
    "javascript-obfuscator": "^4.1.1",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "webpack-obfuscator": "^3.5.1"
  }
}
